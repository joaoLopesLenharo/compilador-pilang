// Exemplo matemático complexo em PiLang
// Calcula expressões matemáticas com múltiplas operações

INICIO
    VARIAVEIS
        x: INTEIRO;
        y: INTEIRO;
        z: REAL;
        resultado: REAL;
    FIM_VARIAVEIS

    // Lê os valores de entrada
    LEIA x;
    LEIA y;

    // Calcula expressão complexa: x + y * 2^3
    z = y * 2 ^ 3;
    resultado = x + z;

    // Exibe o resultado
    ESCREVA resultado;
FIM
