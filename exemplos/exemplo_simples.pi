// Exemplo simples de programa em PiLang
// Calcula a soma de dois números inteiros

INICIO
    VARIAVEIS
        a: INTEIRO;
        b: INTEIRO;
        resultado: INTEIRO;
    FIM_VARIAVEIS

    // Lê os dois números
    LEIA a;
    LEIA b;

    // Calcula a soma
    resultado = a + b;

    // Exibe o resultado
    ESCREVA resultado;
FIM
